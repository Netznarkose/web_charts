<%= simple_form_for(:data, url: {:action => 'create_image'}) do |f| %>
    <%= f.text_field(:subject, class: 'form-control')%>
    <%= f.select(:file_format, [['PNG', :png], ['SVG', :svg]]) %><br>
    <%= f.select(:icon_type, [['Circle', :circle], ['Cross', :cross], ['Manikin', :manikin]]) %><br>
    <%= f.select(:icon_number, (1..100)) %><br>
    <%= f.submit "Submit" %>
<% end %>
